/**
 * Public Module Styles - Modern Cool & Safe Design
 * Sleek navigation with safety-first aesthetics
 */

/* ============================================
   TRUST BANNER - Safety First
   ============================================ */
.trust-banner {
    background: linear-gradient(135deg, #1a5f7a 0%, #159895 100%);
    color: white;
    padding: 0.5rem 0;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1001;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.trust-items {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    flex-wrap: wrap;
}

.trust-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8125rem;
    font-weight: 500;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
}

.trust-badge:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
}

.trust-badge svg {
    width: 16px;
    height: 16px;
}

.trust-badge.emergency-contact {
    background: rgba(255, 87, 51, 0.9);
    font-weight: 600;
    animation: pulse-glow 2s ease-in-out infinite;
}

@keyframes pulse-glow {
    0%, 100% { box-shadow: 0 0 5px rgba(255, 87, 51, 0.5); }
    50% { box-shadow: 0 0 20px rgba(255, 87, 51, 0.8); }
}

/* ============================================
   MODERN HEADER
   ============================================ */
.modern-header {
    position: fixed;
    top: 36px;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border-bottom: 2px solid transparent;
    border-image: linear-gradient(90deg, #1a5f7a, #159895, #57cc99) 1;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.modern-header.scrolled {
    background: rgba(255, 255, 255, 0.98);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
    top: 0;
}

.modern-header.scrolled + .safety-strip {
    top: 72px;
}

.header-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 0;
    gap: 2rem;
}

/* ============================================
   BRAND IDENTITY - Cool Logo Design
   ============================================ */
.brand-identity {
    display: flex;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
    position: relative;
    transition: transform 0.3s ease;
}

.brand-identity:hover {
    transform: translateX(5px);
}

.logo-container {
    position: relative;
}

.logo-badge {
    width: 56px;
    height: 56px;
    background: linear-gradient(135deg, #1a5f7a 0%, #159895 50%, #57cc99 100%);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 800;
    color: white;
    box-shadow: 0 8px 24px rgba(26, 95, 122, 0.3);
    position: relative;
    overflow: hidden;
    transition: all 0.4s ease;
}

.logo-badge::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transform: translateX(-100%);
    transition: transform 0.6s ease;
}

.brand-identity:hover .logo-badge::before {
    transform: translateX(100%);
}

.brand-identity:hover .logo-badge {
    transform: rotate(-5deg) scale(1.05);
    box-shadow: 0 12px 32px rgba(26, 95, 122, 0.4);
}

.safety-indicator {
    position: absolute;
    top: -4px;
    right: -4px;
    width: 20px;
    height: 20px;
    background: #22c55e;
    border-radius: 50%;
    border: 3px solid white;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 8px rgba(34, 197, 94, 0.4);
}

.pulse-dot {
    width: 8px;
    height: 8px;
    background: white;
    border-radius: 50%;
    animation: pulse-dot 2s ease-in-out infinite;
}

@keyframes pulse-dot {
    0%, 100% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.3); opacity: 0.7; }
}

.brand-info {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
}

.brand-title {
    font-size: 1.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, #1a5f7a 0%, #159895 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.2;
    margin: 0;
}

.brand-tagline {
    font-size: 0.75rem;
    color: #6b7280;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0;
}

/* ============================================
   PRIMARY NAVIGATION - Cool & Interactive
   ============================================ */
.primary-navigation {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.nav-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    text-decoration: none;
    color: #374151;
    font-weight: 600;
    font-size: 0.9375rem;
    border-radius: 12px;
    position: relative;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.nav-item::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #e0f2fe 0%, #dbeafe 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
}

.nav-item .nav-icon {
    font-size: 1.25rem;
    transition: transform 0.3s ease;
    position: relative;
    z-index: 1;
}

.nav-item .nav-text {
    position: relative;
    z-index: 1;
}

.nav-item:hover {
    color: #1a5f7a;
    transform: translateY(-2px);
}

.nav-item:hover::before {
    opacity: 1;
}

.nav-item:hover .nav-icon {
    transform: scale(1.2) rotate(-10deg);
}

.nav-item.active {
    background: linear-gradient(135deg, #1a5f7a 0%, #159895 100%);
    color: white;
    box-shadow: 0 4px 16px rgba(26, 95, 122, 0.3);
}

.nav-item.active .nav-icon {
    transform: scale(1.1);
}

/* ============================================
   ACTION BAR - Modern Buttons
   ============================================ */
.action-bar {
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.action-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: white;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    color: #374151;
    font-weight: 600;
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.action-button:hover {
    border-color: #1a5f7a;
    color: #1a5f7a;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(26, 95, 122, 0.2);
}

.action-button svg {
    width: 20px;
    height: 20px;
}

.whatsapp-action {
    background: linear-gradient(135deg, #25D366 0%, #128C7E 100%);
    color: white;
    border-color: transparent;
}

.whatsapp-action:hover {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 6px 20px rgba(37, 211, 102, 0.4);
    color: white;
}

.mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 0.375rem;
    width: 48px;
    height: 48px;
    padding: 0.75rem;
    background: white;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.mobile-menu-toggle span {
    width: 100%;
    height: 3px;
    background: #1a5f7a;
    border-radius: 2px;
    transition: all 0.3s ease;
}

.mobile-menu-toggle:hover {
    border-color: #1a5f7a;
    background: #f0f9ff;
}

/* Search Overlay */
.search-overlay {
    margin-top: 1.5rem;
    padding: 1.5rem;
    background: white;
    border-radius: 16px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    animation: slideDown 0.3s ease;
}

@keyframes slideDown {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* ============================================
   SAFETY FEATURES STRIP
   ============================================ */
.safety-strip {
    position: fixed;
    top: 108px;
    left: 0;
    right: 0;
    z-index: 999;
    background: #f8fafc;
    border-bottom: 1px solid #e2e8f0;
    padding: 1rem 0;
    transition: all 0.4s ease;
}

.safety-features {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
}

.safety-feature {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    background: white;
    border-radius: 12px;
    border: 2px solid #e2e8f0;
    transition: all 0.3s ease;
}

.safety-feature:hover {
    border-color: #1a5f7a;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(26, 95, 122, 0.15);
}

.feature-icon {
    width: 44px;
    height: 44px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: transform 0.3s ease;
}

.safety-feature:hover .feature-icon {
    transform: rotate(-10deg) scale(1.1);
}

.safety-icon {
    background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
    color: white;
}

.delivery-icon {
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
    color: white;
}

.support-icon {
    background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
    color: white;
}

.price-icon {
    background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
    color: white;
}

.feature-text {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
}

.feature-text strong {
    font-size: 0.875rem;
    font-weight: 700;
    color: #1f2937;
}

.feature-text span {
    font-size: 0.75rem;
    color: #6b7280;
    font-weight: 500;
}

/* ============================================
   RESPONSIVE DESIGN
   ============================================ */
@media (max-width: 1024px) {
    .safety-features {
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
    }

    .action-button .action-label {
        display: none;
    }

    .nav-item {
        padding: 0.75rem 1rem;
        font-size: 0.875rem;
    }
}

@media (max-width: 768px) {
    .trust-items {
        gap: 1rem;
    }

    .trust-badge {
        font-size: 0.75rem;
        padding: 0.25rem 0.5rem;
    }

    .trust-badge.emergency-contact {
        order: -1;
        width: 100%;
        justify-content: center;
    }

    .modern-header {
        top: 60px;
    }

    .brand-info {
        display: none;
    }

    .primary-navigation {
        position: fixed;
        top: 120px;
        left: 0;
        right: 0;
        background: white;
        flex-direction: column;
        padding: 1rem;
        gap: 0.5rem;
        max-height: 0;
        overflow: hidden;
        opacity: 0;
        transition: all 0.4s ease;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }

    .primary-navigation.mobile-active {
        max-height: 500px;
        opacity: 1;
        padding: 1.5rem 1rem;
    }

    .nav-item {
        width: 100%;
        justify-content: flex-start;
    }

    .mobile-menu-toggle {
        display: flex;
    }

    .safety-strip {
        top: 120px;
    }

    .safety-features {
        grid-template-columns: 1fr;
        gap: 0.75rem;
    }

    .safety-feature {
        padding: 0.625rem;
    }
}

/* Old Header Styles - Keep for backward compatibility */
.header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: var(--z-sticky);
    background: var(--bg-glass);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--border-color-light);
    transition: all var(--transition-normal);
}

.header.scrolled {
    box-shadow: var(--shadow-md);
}

.header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-4) 0;
}

.logo {
    display: flex;
    align-items: center;
    gap: var(--space-3);
}

.logo-icon {
    width: 42px;
    height: 42px;
    background: var(--color-primary-gradient);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--font-size-xl);
    color: var(--text-inverse);
    font-weight: var(--font-weight-bold);
}

.logo-text {
    font-family: var(--font-family-logo);
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-black);
    color: var(--color-primary);
    letter-spacing: var(--letter-spacing-tight);
}

.logo-text span {
    color: var(--color-secondary);
}

/* Navigation */
.nav-menu {
    display: flex;
    align-items: center;
    gap: var(--space-8);
}

.nav-link {
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
    color: var(--text-secondary);
    position: relative;
    padding: var(--space-2) 0;
    transition: color var(--transition-normal);
}

.nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--color-primary-gradient);
    transition: width var(--transition-normal);
}

.nav-link:hover,
.nav-link.active {
    color: var(--color-primary);
}

.nav-link:hover::after,
.nav-link.active::after {
    width: 100%;
}

/* Mobile Menu Button */
.mobile-menu-btn {
    display: none;
    flex-direction: column;
    gap: 5px;
    padding: var(--space-2);
}

.mobile-menu-btn span {
    width: 24px;
    height: 2px;
    background: var(--color-primary);
    transition: all var(--transition-normal);
}

/* ============================================
   HERO SECTION
   ============================================ */
.hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    background: linear-gradient(135deg, var(--bg-dark) 0%, var(--bg-dark-secondary) 100%);
    position: relative;
    overflow: hidden;
    padding-top: 180px;
}

.hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%231a5f7a' fill-opacity='0.1'%3E%3Cpath d='M30 30c0-5.5-4.5-10-10-10s-10 4.5-10 10 4.5 10 10 10 10-4.5 10-10zm0 0c0 5.5 4.5 10 10 10s10-4.5 10-10-4.5-10-10-10-10 4.5-10 10z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    opacity: 0.5;
}

.hero-content {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    align-items: center;
}

.hero-text {
    animation: slideInLeft 0.8s ease forwards;
}

.hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    background: rgba(197, 205, 193, 0.3);
    color: var(--color-primary);
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-full);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--space-6);
    border: 1px solid var(--color-secondary);
}

.hero-title {
    font-size: var(--font-size-6xl);
    font-weight: var(--font-weight-extrabold);
    color: var(--text-inverse);
    line-height: 1.1;
    margin-bottom: var(--space-6);
}

.hero-title span {
    background: linear-gradient(135deg, var(--color-secondary) 0%, var(--color-secondary-light) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.hero-description {
    font-size: var(--font-size-lg);
    color: var(--color-gray-400);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--space-8);
    max-width: 500px;
}

.hero-buttons {
    display: flex;
    gap: var(--space-4);
}

.hero-stats {
    display: flex;
    gap: var(--space-8);
    margin-top: var(--space-12);
}

.stat-item {
    text-align: left;
}

.stat-value {
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-bold);
    color: var(--text-inverse);
    line-height: 1;
}

.stat-value span {
    color: var(--color-secondary);
}

.stat-label {
    font-size: var(--font-size-sm);
    color: var(--color-gray-500);
    margin-top: var(--space-1);
}

/* Hero Visual */
.hero-visual {
    position: relative;
    animation: slideUp 0.8s ease forwards;
    animation-delay: 0.2s;
    opacity: 0;
}

.hero-card {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-2xl);
    padding: var(--space-8);
}

.hero-features {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-6);
}

.hero-feature {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    padding: var(--space-6);
    background: rgba(255, 255, 255, 0.05);
    border-radius: var(--radius-xl);
    transition: all var(--transition-normal);
}

.hero-feature:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-4px);
}

.hero-feature-icon {
    font-size: var(--font-size-3xl);
}

.hero-feature-title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--text-inverse);
}

.hero-feature-desc {
    font-size: var(--font-size-sm);
    color: var(--color-gray-400);
}

/* ============================================
   ABOUT SECTION
   ============================================ */
.about-section {
    background: var(--bg-secondary);
}

.about-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
    align-items: center;
}

.about-image {
    position: relative;
}

.about-image-main {
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-2xl);
}

.about-image-badge {
    position: absolute;
    bottom: -30px;
    right: -30px;
    background: var(--color-primary-gradient);
    color: var(--text-inverse);
    padding: var(--space-6);
    border-radius: var(--radius-xl);
    text-align: center;
    box-shadow: var(--shadow-xl);
}

.about-image-badge .years {
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-bold);
    line-height: 1;
}

.about-image-badge .label {
    font-size: var(--font-size-sm);
    margin-top: var(--space-1);
}

.about-text h2 {
    margin-bottom: var(--space-6);
}

.about-text p {
    margin-bottom: var(--space-4);
}

.about-features {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-4);
    margin-top: var(--space-8);
}

.about-feature-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    color: var(--text-secondary);
}

.about-feature-item svg {
    color: var(--color-success);
    flex-shrink: 0;
}

/* ============================================
   FEATURED PRODUCTS
   ============================================ */
.featured-section {
    background: var(--bg-primary);
}

.featured-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-6);
}

.view-all-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--color-primary);
    font-weight: var(--font-weight-semibold);
    transition: gap var(--transition-normal);
}

.view-all-link:hover {
    gap: var(--space-3);
}

/* ============================================
   CONTACT SECTION
   ============================================ */
.contact-section {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    color: var(--text-inverse);
}

.contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
}

.contact-info h2 {
    color: var(--text-inverse);
    margin-bottom: var(--space-4);
}

.contact-info p {
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: var(--space-8);
}

.contact-details {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
}

.contact-item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-4);
}

.contact-icon {
    width: 48px;
    height: 48px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--font-size-xl);
    flex-shrink: 0;
}

.contact-item-content h4 {
    color: var(--text-inverse);
    font-size: var(--font-size-base);
    margin-bottom: var(--space-1);
}

.contact-item-content p {
    color: rgba(255, 255, 255, 0.7);
    font-size: var(--font-size-sm);
    margin: 0;
}

.contact-footer-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    color: var(--color-gray-400);
}

.contact-footer-item svg {
    width: 18px;
    height: 18px;
    color: var(--color-secondary);
}

.social-btn {
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-inverse);
    transition: all var(--transition-normal);
}

.social-btn:hover {
    background: var(--color-primary-light);
    color: var(--color-secondary);
    transform: translateY(-3px);
}

.social-btn svg {
    width: 20px;
    height: 20px;
}

.contact-card {
    background: var(--bg-primary);
    border-radius: var(--radius-2xl);
    padding: var(--space-8);
    color: var(--text-primary);
}

.contact-card h3 {
    margin-bottom: var(--space-6);
}

.timings-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
}

.timing-item {
    display: flex;
    justify-content: space-between;
    padding: var(--space-3) 0;
    border-bottom: 1px solid var(--border-color-light);
}

.timing-item:last-child {
    border-bottom: none;
}

.social-links {
    display: flex;
    gap: var(--space-4);
    margin-top: var(--space-6);
}

.social-link {
    width: 44px;
    height: 44px;
    background: var(--color-primary-gradient);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-inverse);
    font-size: var(--font-size-lg);
    transition: all var(--transition-normal);
}

.social-link:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-lg);
}

/* ============================================
   FOOTER
   ============================================ */
.footer {
    background: var(--bg-dark);
    color: var(--text-inverse);
    padding: var(--space-16) 0 var(--space-8);
}

.footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: var(--space-12);
    margin-bottom: var(--space-12);
}

.footer-brand {
    max-width: 300px;
}

.footer-brand .logo {
    margin-bottom: var(--space-4);
}

.footer-brand p {
    color: var(--color-gray-400);
    font-size: var(--font-size-sm);
}

.footer-section h4 {
    color: var(--text-inverse);
    font-size: var(--font-size-base);
    margin-bottom: var(--space-4);
}

.footer-links {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
}

.footer-link {
    color: var(--color-gray-400);
    font-size: var(--font-size-sm);
    transition: color var(--transition-normal);
}

.footer-link:hover {
    color: var(--color-secondary);
}

.footer-bottom {
    padding-top: var(--space-8);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.footer-copyright {
    color: var(--color-gray-500);
    font-size: var(--font-size-sm);
}

/* ============================================
   PRODUCTS PAGE
   ============================================ */
.products-page {
    padding-top: 180px;
    min-height: 100vh;
}

.products-header {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    padding: var(--space-16) 0;
    text-align: center;
    color: var(--text-inverse);
}

.products-header h1 {
    color: var(--text-inverse);
    margin-bottom: var(--space-4);
}

.products-header p {
    color: rgba(255, 255, 255, 0.8);
    max-width: 600px;
    margin: 0 auto;
}

.products-content {
    padding: var(--space-12) 0;
}

/* Category Filter */
.category-filter {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
    justify-content: center;
    margin-bottom: var(--space-10);
}

.category-btn {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-5);
    background: var(--bg-secondary);
    border: 2px solid transparent;
    border-radius: var(--radius-full);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--text-secondary);
    cursor: pointer;
    transition: all var(--transition-normal);
}

.category-btn:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
}

.category-btn.active {
    background: var(--color-primary-gradient);
    color: var(--text-inverse);
    border-color: transparent;
}

.category-btn .icon {
    font-size: var(--font-size-base);
}

/* Product Grid */
.product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--space-6);
}

/* Product Card */
.product-card {
    background: var(--bg-primary);
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition: all var(--transition-normal);
    border: 1px solid var(--border-color-light);
}

.product-card:hover {
    transform: translateY(-6px);
    box-shadow: var(--shadow-xl);
}

.product-image {
    height: 180px;
    background: var(--bg-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
}

.product-icon-wrap svg {
    width: 64px;
    height: 64px;
    color: var(--color-primary);
    position: relative;
    z-index: 1;
}

.product-icon-large svg {
    width: 80px;
    height: 80px;
    color: var(--color-primary);
}

.product-image::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(26, 95, 122, 0.05) 0%, rgba(41, 128, 185, 0.05) 100%);
}

.product-badge {
    position: absolute;
    top: var(--space-3);
    right: var(--space-3);
}

.product-info {
    padding: var(--space-5);
}

.product-category {
    font-size: var(--font-size-xs);
    color: var(--color-primary);
    font-weight: var(--font-weight-semibold);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: var(--space-2);
}

.product-name {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--text-primary);
    margin-bottom: var(--space-2);
    line-height: var(--line-height-tight);
}

.product-description {
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
    margin-bottom: var(--space-4);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.product-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.product-price {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
}

.product-price span {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-normal);
    color: var(--text-muted);
}

/* Availability Badge */
.availability-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-semibold);
}

.availability-badge.in-stock {
    background: var(--color-success-bg);
    color: var(--color-success);
}

.availability-badge.low-stock {
    background: var(--color-warning-bg);
    color: var(--color-warning-dark);
}

.availability-badge.out-of-stock {
    background: var(--color-danger-bg);
    color: var(--color-danger);
}

.availability-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: currentColor;
}

/* Empty State */
.empty-state {
    text-align: center;
    padding: var(--space-16) 0;
}

.empty-state-icon {
    font-size: 4rem;
    margin-bottom: var(--space-4);
}

.empty-state h3 {
    color: var(--text-secondary);
    margin-bottom: var(--space-2);
}

.empty-state p {
    color: var(--text-muted);
}

/* Loading State */
.loading-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--space-6);
}

.loading-card {
    background: var(--bg-primary);
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
}

.loading-card .loading-image {
    height: 180px;
}

.loading-card .loading-content {
    padding: var(--space-5);
}

.loading-card .loading-line {
    height: 16px;
    margin-bottom: var(--space-3);
}

.loading-card .loading-line.short {
    width: 60%;
}

.loading-card .loading-line.shorter {
    width: 40%;
}

/* ============================================
   SEARCH BAR
   ============================================ */
.header-actions {
    display: flex;
    align-items: center;
    gap: var(--space-4);
}

.search-toggle-btn {
    padding: var(--space-2);
    color: var(--color-primary);
    transition: all var(--transition-normal);
    border-radius: var(--radius-md);
}

.search-toggle-btn:hover {
    background: var(--bg-secondary);
}

.header-search {
    padding: var(--space-4) 0;
}

.search-bar {
    position: relative;
    width: 100%;
}

.search-input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
}

.search-icon {
    position: absolute;
    left: var(--space-4);
    color: var(--text-muted);
    pointer-events: none;
}

.search-input {
    width: 100%;
    padding: var(--space-3) var(--space-10);
    padding-left: var(--space-10);
    border: 2px solid var(--border-color);
    border-radius: var(--radius-lg);
    font-size: var(--font-size-base);
    transition: all var(--transition-normal);
}

.search-input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(26, 95, 122, 0.1);
}

.search-clear {
    position: absolute;
    right: var(--space-4);
    padding: var(--space-1);
    color: var(--text-muted);
    font-size: var(--font-size-lg);
    transition: color var(--transition-normal);
}

.search-clear:hover {
    color: var(--text-primary);
}

.search-dropdown {
    position: absolute;
    top: calc(100% + var(--space-2));
    left: 0;
    right: 0;
    background: var(--bg-primary);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-xl);
    max-height: 400px;
    overflow-y: auto;
    z-index: var(--z-dropdown);
}

.search-result-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-4);
    cursor: pointer;
    transition: background var(--transition-fast);
    border-bottom: 1px solid var(--border-color-light);
}

.search-result-item:hover {
    background: var(--bg-secondary);
}

.search-result-item:last-child {
    border-bottom: none;
}

.search-result-info {
    flex: 1;
}

.search-result-name {
    font-weight: var(--font-weight-semibold);
    color: var(--text-primary);
    margin-bottom: var(--space-1);
}

.search-result-category {
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
}

.search-result-price {
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
}

.search-loading,
.search-no-results {
    padding: var(--space-6);
    text-align: center;
    color: var(--text-secondary);
}

.search-footer {
    padding: var(--space-3);
    text-align: center;
    font-size: var(--font-size-sm);
    color: var(--text-muted);
    background: var(--bg-secondary);
    border-top: 1px solid var(--border-color-light);
}

/* ============================================
   BREADCRUMB
   ============================================ */
.breadcrumb {
    padding: var(--space-4) 0;
}

.breadcrumb-list {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--space-2);
}

.breadcrumb-item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
}

.breadcrumb-link {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--text-secondary);
    font-size: var(--font-size-sm);
    transition: color var(--transition-normal);
}

.breadcrumb-link:hover {
    color: var(--color-primary);
}

.breadcrumb-current {
    color: var(--text-primary);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
}

.breadcrumb-separator {
    color: var(--text-muted);
}

/* ============================================
   SCROLL TO TOP
   ============================================ */
.scroll-to-top {
    position: fixed;
    bottom: var(--space-8);
    right: var(--space-8);
    width: 48px;
    height: 48px;
    background: var(--color-primary-gradient);
    color: var(--text-inverse);
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-lg);
    cursor: pointer;
    transition: all var(--transition-normal);
    z-index: var(--z-fixed);
    animation: fadeIn 0.3s ease;
}

.scroll-to-top:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-2xl);
}

/* ============================================
   WHATSAPP BUTTON
   ============================================ */
.whatsapp-button {
    position: fixed;
    bottom: var(--space-8);
    left: var(--space-8);
    width: 60px;
    height: 60px;
    background: #25D366;
    color: white;
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-xl);
    cursor: pointer;
    transition: all var(--transition-normal);
    z-index: var(--z-fixed);
}

.whatsapp-button:hover {
    transform: scale(1.1);
    box-shadow: var(--shadow-2xl);
}

.whatsapp-tooltip {
    position: absolute;
    right: calc(100% + var(--space-3));
    background: var(--bg-dark);
    color: var(--text-inverse);
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-md);
    font-size: var(--font-size-sm);
    white-space: nowrap;
    animation: fadeIn 0.2s ease;
}

/* ============================================
   CATEGORY CARD
   ============================================ */
.categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-6);
}

.category-card {
    position: relative;
    background: var(--bg-primary);
    border-radius: var(--radius-xl);
    padding: var(--space-8);
    text-align: center;
    border: 2px solid var(--border-color-light);
    transition: all var(--transition-normal);
    overflow: hidden;
}

.category-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--category-color, var(--color-primary));
    transform: scaleX(0);
    transition: transform var(--transition-normal);
}

.category-card:hover {
    transform: translateY(-6px);
    box-shadow: var(--shadow-xl);
    border-color: var(--category-color, var(--color-primary));
}

.category-card:hover::before {
    transform: scaleX(1);
}

.category-card-icon {
    font-size: 4rem;
    margin-bottom: var(--space-4);
}

.category-card-name {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-3);
}

.category-card-description {
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
    margin-bottom: var(--space-4);
}

.category-card-count {
    display: inline-flex;
    align-items: center;
    padding: var(--space-2) var(--space-4);
    background: var(--bg-secondary);
    border-radius: var(--radius-full);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--text-secondary);
}

.category-card-arrow {
    position: absolute;
    bottom: var(--space-4);
    right: var(--space-4);
    color: var(--category-color, var(--color-primary));
    opacity: 0;
    transform: translateX(-10px);
    transition: all var(--transition-normal);
}

.category-card:hover .category-card-arrow {
    opacity: 1;
    transform: translateX(0);
}

.category-card-skeleton {
    height: 250px;
    border-radius: var(--radius-xl);
}

/* ============================================
   CATEGORIES SHOWCASE
   ============================================ */
.categories-showcase {
    background: var(--bg-secondary);
}

/* ============================================
   PRODUCT DETAIL PAGE
   ============================================ */
.product-detail-page {
    padding-top: 180px;
    min-height: 100vh;
}

.product-detail-header {
    background: var(--bg-secondary);
    padding: var(--space-6) 0;
}

.product-detail-section {
    padding: var(--space-16) 0;
}

.product-detail-content {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: var(--space-16);
}

.product-detail-image {
    position: relative;
}

.product-image-main {
    height: 500px;
    background: var(--bg-secondary);
    border-radius: var(--radius-2xl);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
}

.product-image-main::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(26, 95, 122, 0.05) 0%, rgba(41, 128, 185, 0.05) 100%);
}

.product-icon-large {
    font-size: 10rem;
    position: relative;
    z-index: 1;
}

.product-detail-badge {
    position: absolute;
    top: var(--space-6);
    right: var(--space-6);
}

.product-detail-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
}

.product-detail-category {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.product-detail-category a {
    color: var(--color-primary);
    transition: color var(--transition-normal);
}

.product-detail-category a:hover {
    color: var(--color-primary-dark);
}

.product-detail-name {
    font-size: var(--font-size-5xl);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    line-height: var(--line-height-tight);
}

.product-detail-price {
    display: flex;
    align-items: baseline;
    gap: var(--space-2);
}

.price-amount {
    font-size: var(--font-size-5xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
}

.price-unit {
    font-size: var(--font-size-lg);
    color: var(--text-muted);
}

.product-detail-description h3 {
    font-size: var(--font-size-xl);
    margin-bottom: var(--space-3);
}

.product-detail-description p {
    font-size: var(--font-size-lg);
    line-height: var(--line-height-relaxed);
}

.product-detail-specs h3 {
    font-size: var(--font-size-xl);
    margin-bottom: var(--space-4);
}

.specs-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-4);
}

.spec-item {
    padding: var(--space-4);
    background: var(--bg-secondary);
    border-radius: var(--radius-lg);
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
}

.spec-label {
    font-size: var(--font-size-sm);
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.spec-value {
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    color: var(--text-primary);
}

.product-detail-actions {
    display: flex;
    gap: var(--space-4);
    margin-top: var(--space-4);
}

.product-detail-loading,
.product-error {
    text-align: center;
    padding: var(--space-24) 0;
}

.loading-spinner {
    width: 48px;
    height: 48px;
    border: 4px solid var(--border-color);
    border-top-color: var(--color-primary);
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 0 auto var(--space-4);
}

@keyframes spin {
    to {
        transform: rotate(360deg);
    }
}

.product-error h1 {
    margin-bottom: var(--space-4);
}

.product-error p {
    margin-bottom: var(--space-6);
}

.related-products {
    padding: var(--space-16) 0;
    background: var(--bg-secondary);
}

.related-products .section-title {
    text-align: center;
    margin-bottom: var(--space-10);
}

/* ============================================
   CATEGORIES PAGE
   ============================================ */
.categories-page {
    padding-top: 180px;
    min-height: 100vh;
}

.categories-page-header {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    padding: var(--space-16) 0;
    text-align: center;
    color: var(--text-inverse);
}

.categories-page-header h1 {
    color: var(--text-inverse);
    margin-bottom: var(--space-4);
}

.categories-page-header p {
    color: rgba(255, 255, 255, 0.8);
    max-width: 700px;
    margin: 0 auto;
    font-size: var(--font-size-lg);
}

/* ============================================
   ABOUT PAGE
   ============================================ */
.about-page {
    padding-top: 180px;
    min-height: 100vh;
}

.about-page-header {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    padding: var(--space-16) 0;
    text-align: center;
    color: var(--text-inverse);
}

.about-page-header h1 {
    color: var(--text-inverse);
    margin-bottom: var(--space-4);
}

.about-tagline {
    font-size: var(--font-size-xl);
    color: rgba(255, 255, 255, 0.9);
}

.about-story {
    background: var(--bg-primary);
}

.about-content-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: var(--space-16);
    align-items: center;
}

.about-text-content h2 {
    margin-bottom: var(--space-6);
}

.about-text-content p {
    font-size: var(--font-size-lg);
    margin-bottom: var(--space-4);
}

.about-stats-card {
    background: var(--color-primary-gradient);
    color: var(--text-inverse);
    padding: var(--space-10);
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-2xl);
}

.stat-item-large {
    text-align: center;
    padding: var(--space-6) 0;
}

.stat-item-large:not(:last-child) {
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
}

.stat-number {
    font-size: var(--font-size-6xl);
    font-weight: var(--font-weight-extrabold);
    line-height: 1;
    margin-bottom: var(--space-2);
}

.about-mission {
    background: var(--bg-secondary);
}

.mission-vision-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-8);
}

.mission-card {
    background: var(--bg-primary);
    padding: var(--space-10);
    border-radius: var(--radius-2xl);
    text-align: center;
    box-shadow: var(--shadow-md);
    transition: all var(--transition-normal);
}

.mission-card:hover {
    transform: translateY(-6px);
    box-shadow: var(--shadow-xl);
}

.mission-icon {
    font-size: 4rem;
    margin-bottom: var(--space-4);
}

.mission-card h3 {
    margin-bottom: var(--space-4);
}

.mission-card p {
    font-size: var(--font-size-lg);
}

.about-timeline {
    background: var(--bg-primary);
}

.timeline {
    max-width: 800px;
    margin: 0 auto;
    position: relative;
}

.timeline::before {
    content: '';
    position: absolute;
    left: 30px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--border-color);
}

.timeline-item {
    position: relative;
    padding-left: var(--space-16);
    padding-bottom: var(--space-10);
}

.timeline-marker {
    position: absolute;
    left: 22px;
    top: 0;
    width: 18px;
    height: 18px;
    background: var(--color-primary);
    border: 3px solid var(--bg-primary);
    border-radius: 50%;
    box-shadow: 0 0 0 4px var(--border-color-light);
}

.timeline-content {
    background: var(--bg-secondary);
    padding: var(--space-6);
    border-radius: var(--radius-xl);
}

.timeline-year {
    display: inline-block;
    background: var(--color-primary-gradient);
    color: var(--text-inverse);
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-full);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--space-3);
}

.timeline-title {
    font-size: var(--font-size-xl);
    margin-bottom: var(--space-2);
}

.timeline-description {
    color: var(--text-secondary);
}

.about-values {
    background: var(--bg-secondary);
}

.values-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-6);
}

.value-card {
    background: var(--bg-primary);
    padding: var(--space-8);
    border-radius: var(--radius-xl);
    text-align: center;
    transition: all var(--transition-normal);
}

.value-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
}

.value-icon {
    font-size: 3rem;
    margin-bottom: var(--space-4);
}

.value-card h4 {
    margin-bottom: var(--space-3);
}

/* ============================================
   NOT FOUND PAGE
   ============================================ */
.not-found-page {
    padding-top: 180px;
    min-height: 100vh;
}

.not-found-section {
    min-height: calc(100vh - 80px);
    display: flex;
    align-items: center;
    justify-content: center;
}

.not-found-content {
    text-align: center;
    max-width: 600px;
    padding: var(--space-12) 0;
}

.not-found-icon {
    color: var(--color-primary);
    margin-bottom: var(--space-6);
}

.not-found-icon svg {
    margin: 0 auto;
}

.not-found-title {
    font-size: var(--font-size-6xl);
    font-weight: var(--font-weight-extrabold);
    color: var(--color-primary);
    margin-bottom: var(--space-4);
}

.not-found-subtitle {
    font-size: var(--font-size-3xl);
    margin-bottom: var(--space-4);
}

.not-found-description {
    font-size: var(--font-size-lg);
    margin-bottom: var(--space-8);
}

.not-found-actions {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    margin-bottom: var(--space-10);
}

.not-found-links p {
    color: var(--text-secondary);
    margin-bottom: var(--space-4);
}

.quick-links {
    display: flex;
    gap: var(--space-6);
    justify-content: center;
}

.quick-links a {
    color: var(--color-primary);
    font-weight: var(--font-weight-semibold);
    transition: color var(--transition-normal);
}

.quick-links a:hover {
    color: var(--color-primary-dark);
    text-decoration: underline;
}